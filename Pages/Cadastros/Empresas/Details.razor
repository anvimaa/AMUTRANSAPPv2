@page "/empresas/{id:int}"
@inject AMUTRANSPORTESService service
@inject NavigationManager navegation
@attribute [Authorize]

<RadzenStack Gap="0.5">
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                <RadzenText Text="@entity.Designacao" TextStyle="TextStyle.H4" TagName="TagName.H4" style="margin: 0" />
            </RadzenStack>
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton ButtonStyle="ButtonStyle.Success" Icon="add_circle_outline" Text="Renovar Licença" Click="@RenovarClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code {
    [Parameter]
    public int Id { get; set; }
    Empresa entity = new();
    
    protected override async Task OnInitializedAsync()
    {
        entity = await service.GetEmpresaById(Id);
    }

    void RenovarClick() { }
    void ValidarClick(MouseEventArgs args, LicencaLoja entity) { }
}
